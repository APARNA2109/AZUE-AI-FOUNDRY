{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "account_name": { "defaultValue": "aiFoundary", "type": "String" },
    "location": { "defaultValue": "[resourceGroup().location]", "type": "String" },
    "deploymentId": { "type": "String" },
    "webhookUri": { "type": "String" },
    "webhookResourceId": { "type": "String" }
  },
  "variables": {
    "account_name": "[concat(parameters('account_name'), '-', parameters('deploymentId'))]"
  },
  "resources": [
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2025-04-01-preview",
      "name": "[variables('account_name')]",
      "location": "[parameters('location')]",
      "sku": { "name": "S0" },
      "kind": "AIServices",
      "identity": { "type": "SystemAssigned" },
      "properties": {
        "customSubDomainName": "[variables('account_name')]",
        "networkAcls": {
          "defaultAction": "Deny",
          "virtualNetworkRules": [],
          "ipRules": []
        },
        "allowProjectManagement": true,
        "defaultProject": "aiProject",
        "associatedProjects": [ "aiProject" ],
        "publicNetworkAccess": "Disabled",
        "apiProperties": {}
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/raiBlocklists",
      "apiVersion": "2025-04-01-preview",
      "name": "[concat(variables('account_name'), '/bitcoinBlocklist')]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('account_name'))]"
      ],
      "properties": {
        "description": "Block chats related to bitcoin mining"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/raiBlocklists/raiBlocklistItems",
      "apiVersion": "2025-04-01-preview",
      "name": "[concat(variables('account_name'), '/bitcoinBlocklist/term-bitcoin')]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts/raiBlocklists', variables('account_name'), 'bitcoinBlocklist')]"
      ],
      "properties": {
        "pattern": "bitcoin",
        "isRegex": false
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/raiBlocklists/raiBlocklistItems",
      "apiVersion": "2025-04-01-preview",
      "name": "[concat(variables('account_name'), '/bitcoinBlocklist/term-bitcoin-mining')]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts/raiBlocklists', variables('account_name'), 'bitcoinBlocklist')]"
      ],
      "properties": {
        "pattern": "bitcoin mining",
        "isRegex": false
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/raiPolicies",
      "apiVersion": "2025-04-01-preview",
      "name": "[concat(variables('account_name'), '/aiGuardrails')]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts/raiBlocklists', variables('account_name'), 'bitcoinBlocklist')]"
      ],
      "properties": {
        "basePolicyName": "Microsoft.Default",
        "mode": "Asynchronous_Filter",
        "customBlocklists": [
          {
            "blocklistName": "bitcoinBlocklist",
            "blocking": true,
            "source": "Prompt"
          },
          {
            "blocklistName": "bitcoinBlocklist",
            "blocking": true,
            "source": "Completion"
          }
        ],
        "contentFilters": {
          "harmCategories": [],
          "blocklistAction": "Block"
        }
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2025-04-01-preview",
      "name": "[concat(variables('account_name'), '/gpt-4o')]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('account_name'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts/raiPolicies', variables('account_name'), 'aiGuardrails')]"
      ],
      "sku": {
        "name": "GlobalStandard",
        "capacity": 10
      },
      "properties": {
        "model": {
          "format": "OpenAI",
          "name": "gpt-4o",
          "version": "2024-11-20"
        },
        "versionUpgradeOption": "OnceNewDefaultVersionAvailable",
        "currentCapacity": 10,
        "raiPolicyName": "aiGuardrails"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/projects",
      "apiVersion": "2025-04-01-preview",
      "name": "[concat(variables('account_name'), '/aiProject')]",
      "location": "[parameters('location')]",
      "kind": "AIServices",
      "identity": { "type": "SystemAssigned" },
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('account_name'))]"
      ],
      "properties": {
        "description": "Default project with guardrails",
        "displayName": "aiProject"
      }
    }
  ]
}
